<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/register-admin.css">
  <title>Register Admin</title>
  <script src=" https://cdn.jsdelivr.net/npm/vue@3.3.4/dist/vue.global.min.js "></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/zxcvbn/4.4.2/zxcvbn.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">

</head>
<body>
  <%- include('navbar.ejs', { user: user }) %>
 <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
  integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
 <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js"
  integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
 <div id="app" class="wrapper bg-dark mt-lg-0">
  <div class="container-fluid main">
   <div class="row g-3">
    <div class="col-md-6 side-image">
     <!----Image here---->
     <img src="">
    </div>
    <div class="col-md-6 right">
     <div class="logo">
      <img src="/images/register/logo1.png" alt="Oikko Logo">
     </div>
     <div class="input-box">
      <header>Create your account</header>
      <form id="register-form" action="/auth/admin-register" method="POST">
       <div class="form-outline mb-4">
        <input type="text" id="name" name="name" class="form-control" placeholder="Enter your name" required />
       </div>

       <div class="form-outline mb-4">
        <input type="email" id="email" name="email" class="form-control" placeholder="Enter a valid email address"
         required />
       </div>

       <div class="form-outline mb-4">
        <input type="password" id="password" name="password" class="form-control" placeholder="Enter password"
         v-model="password" @input="checkPasswordStrength" required />
       </div>
       <p>Password strength:</p>
       <div class="progress">
        <div class="progress-bar" :class="passwordStrengthClass" role="progressbar" aria-valuemin="0" aria-valuemax="4"
         :style="{ width: (passwordStrength * 25) + '%' }" id="pwStrength"></div>
       </div>
       <p class="text-danger" :class="passwordStrength < 2 ? 'visible' : 'invisible'" style="font-size:10px;"
        v-text="passwordSuggestions"></p>

       <div class="text-center mt-2 mb-2">
        <button type="submit" class="submit" style="padding-left: 2.5rem; padding-right: 2.5rem;" id="registerButton"
         form="register-form" :disabled="passwordStrength < 2">Sign Up</button>
       </div>
      </form>
      <div class="signin">
       <span>Already have an account? <a class="text-primary-" href="/login">Log in here</a></span>
      </div>
     </div>
    </div>
   </div>
  </div>

  <%- include('footer.ejs') %>

   <script>
    const app = Vue.createApp({
     data() {
      return {
       password: '',
       passwordStrength: 0,
       passwordSuggestions: '',
      };
     },
     computed: {
      passwordStrengthClass() {
       return {
        'bg-danger': this.passwordStrength < 2,
        'bg-warning': this.passwordStrength >= 2 && this.passwordStrength < 4,
        'bg-success': this.passwordStrength >= 4,
       };
      },
     },
     methods: {
      checkPasswordStrength() {
       const result = zxcvbn(this.password);
       this.passwordStrength = result.score;
       this.passwordSuggestions = result.feedback.suggestions.join('. ');

       if (this.passwordStrength < 2) {
        this.passwordSuggestions += '. ' + result.feedback.warning;
       }
      },
     },
    });

    app.mount('#app');
   </script>

</body>

</html>